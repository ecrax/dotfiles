# Lines configured by zsh-newuser-install
HISTFILE=~/.histfile
HISTSIZE=1000
SAVEHIST=1000
bindkey -e
# End of lines configured by zsh-newuser-install
# The following lines were added by compinstall
zstyle :compinstall filename '/home/leo/.zshrc'

autoload -Uz compinit
compinit
# End of lines added by compinstall

# Antidote
source ${ZDOTDIR:-~}/.antidote/antidote.zsh
antidote load

# Starship
eval "$(starship init zsh)"

# NVM
export NVM_DIR="${HOME}/.nvm"
[ -s "$NVM_DIR/nvm.sh" ] && \. "$NVM_DIR/nvm.sh"

# Aliases (https://github.com/denysdovhan/dotfiles/blob/master/lib/aliases.zsh)
# Enable aliases to be sudoâ€™ed
#   http://askubuntu.com/questions/22037/aliases-not-available-when-using-sudo
alias sudo='sudo '

_exists() {
  command -v $1 > /dev/null 2>&1
}

# Avoid stupidity with trash-cli:
# https://github.com/sindresorhus/trash-cli
# or use default rm -i
#if _exists trash; then
#  alias rm='trash'
#fi

# Just bcoz clr shorter than clear
alias clr='clear'

# Go to the /home/$USER (~) directory and clears window of your terminal
alias q="~ && clear"

# Go up a directory
alias ..="cd ../"
alias ....="cd ../../"

# Helix
alias hx="helix"

# Folders Shortcuts
[ -d ~/Downloads ]            && alias dl='cd ~/Downloads'
[ -d ~/Desktop ]              && alias dt='cd ~/Desktop'
[ -d ~/projects ]             && alias pj='cd ~/Projects'
[ -d ~/projects/forks ]       && alias pjf='cd ~/projects/forks'
[ -d ~/projects/uni ]         && alias pju='cd ~/projects/uni'
[ -d ~/projects/playground ]  && alias pjl='cd ~/projects/playground'
[ -d ~/projects/repos ]       && alias pjr='cd ~/projects/repos'
[ -d ~/Uni/Notes ]            && alias notes='cd ~/Uni/Notes'

# Commands Shortcuts
alias e="$EDITOR"
alias -- +x='chmod +x'
alias x+='chmod +x'

# Open aliases
alias open='xdg-open'
alias o='open'
alias oo='open .'

# Quick reload of zsh environment
alias reload="source $HOME/.zshrc"

# My IP
alias myip='ifconfig | sed -En "s/127.0.0.1//;s/.*inet (addr:)?(([0-9]*\.){3}[0-9]*).*/\2/p"'

# Show $PATH in readable view
alias path='echo -e ${PATH//:/\\n}'

# Download web page with all assets
alias getpage='wget --no-clobber --page-requisites --html-extension --convert-links --no-host-directories'

# Download file with original filename
alias get="curl -O -L"

# Use tldr as help util
if _exists tldr; then
  alias help="tldr"
fi

alias git-root='cd $(git rev-parse --show-toplevel)'

if _exists lsd; then
 # unalias ls
  alias ls='lsd'
  alias lt='lsd --tree'
fi

# cat with syntax highlighting
# https://github.com/sharkdp/bat
if _exists bat; then
  alias cat='bat'
fi

# pnpm
export PNPM_HOME="/home/leo/.local/share/pnpm"
export PATH="$PNPM_HOME:$PATH"

# Go Binaries
export PATH="$HOME/go/bin:$PATH"
